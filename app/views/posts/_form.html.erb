<div class="section">
  <%= form_for Post.new do |f| %>
    <div class="field">
      <div class="control">
        %= f.label :title %>
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.label :comment %>
        <%= f.text_field :comments %>
      </div>
    </div>
    <div class="actions"><%= f.submit "Leave a reply", class: "button is-primary" %></div>
    <% end %>
</div>


