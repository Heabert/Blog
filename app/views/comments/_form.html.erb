<div class="section">
  <%= form_for([ @post, @post.comments.build]) do |f| %>
    <div class="field">

        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.label :comment %>
        <%= f.text_field :comment %>
      </div>
    </div>
    <div class="actions"><%= f.submit "Leave a reply" %></div>
    <%end%>
</div>







